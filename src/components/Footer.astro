---
import { t } from '../i18n/utils';
import type { Lang } from '../i18n/config';

interface Props {
  lang?: Lang;
}

const { lang = 'de' } = Astro.props;

const legalLinks = lang === 'de'
  ? [
      { label: t(lang, 'footer.imprint'), href: `/${lang}/impressum` },
      { label: t(lang, 'footer.privacy'), href: `/${lang}/datenschutz` },
    ]
  : [
      { label: t(lang, 'footer.imprint'), href: `/${lang}/imprint` },
      { label: t(lang, 'footer.privacy'), href: `/${lang}/privacy` },
    ];
---

