---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { t } from '../../i18n/utils';
import { languages } from '../../i18n/config';
import type { Lang } from '../../i18n/config';

export function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Lang };

const content = {
  de: {
    headline: 'Projekte',
    subtitle: 'Was ich aktuell baue und skaliere — mit Fokus auf AI, Community und Human-Centered Design.',
  },
  en: {
    headline: 'Projects',
    subtitle: "What I'm currently building and scaling — with a focus on AI, community and human-centered design.",
  },
};

const projects = [
  {
    title: 'wynd',
    subtitle: { de: 'Hyperlocal AI', en: 'Hyperlocal AI' },
    description: {
      de: 'wynd liefert hyperlocale Winddaten mit Echtzeit-Präzision — genau dort, wo es zählt. Angetrieben von AI und gestützt durch die am schnellsten wachsende Windsport-Community.',
      en: 'wynd delivers hyperlocal wind data with real-time precision — exactly where it matters. Powered by AI and backed by the fastest-growing wind sports community on Earth.',
    },
    icon: '/images/wynd-icon.png',
    color: 'blue',
    url: 'https://www.wynd.live',
    features: {
      de: ['Live Windgeschwindigkeit & Richtung', 'Community-verifizierte Stationen', 'Für Kitesurfer, Wingfoiler & Wind-Enthusiasten'],
      en: ['Live wind speed and direction', 'Community-verified stations', 'Built for kitesurfers, wingfoilers & wind lovers'],
    },
  },
  {
    title: 'flowboost',
    subtitle: { de: 'Content Agents', en: 'Content Agents' },
    description: {
      de: 'flowboost ist dein AI-System für markensicheren Content. Intelligente Agents verbinden Daten, Teams und Kanäle für jeden Schritt von Strategie bis Publishing.',
      en: 'flowboost is your AI system for generating brand-safe content. Powered by intelligent agents, it connects your data, teams, and channels to streamline every step.',
    },
    icon: '/images/flowboost-icon.png',
    color: 'purple',
    url: 'https://www.flowboost.ai',
    features: {
      de: ['Brand Engine mit Memory & Fingerprints', 'AI Content Studio mit SEO', 'Multi-Channel Publishing & Performance'],
      en: ['Brand engine with memory & fingerprints', 'AI content studio with SEO & formatting', 'Multi-channel publishing & performance'],
    },
  },
  {
    title: 'breathe Journey',
    subtitle: { de: 'Achtsamkeits-App', en: 'Mindfulness App' },
    description: {
      de: 'In einer Welt, die immer schneller und künstlicher wird, bringt breathe Ruhe und Achtsamkeit zurück. Es hilft dir, langsamer zu werden und Raum für das Wesentliche zu schaffen.',
      en: "In a world that's becoming faster and more artificial, breathe brings calm and mindfulness back to your life. It helps you slow down and create space for what truly matters.",
    },
    icon: '/images/breathe-icon.png',
    color: 'emerald',
    url: 'https://www.breathejourney.com',
    features: {
      de: ['Geführte Achtsamkeits-Journeys', 'Tägliche Momente der Ruhe', 'Tools zum natürlichen Stressabbau'],
      en: ['Guided mindfulness journeys', 'Daily moments of calm', 'Tools to release stress naturally'],
    },
  },
  {
    title: 'checkdomain',
    subtitle: { de: 'Hosting-Provider', en: 'Hosting Provider' },
    description: {
      de: 'Gegründet und skaliert als einer der führenden Hosting- & Domain-Provider Deutschlands, mit dem stärksten organischen Wachstum am Markt. Akquiriert von Dogado (group.ONE).',
      en: "Founded and scaled one of Germany's leading hosting & domain providers, achieving the strongest organic growth in the market before being acquired by Dogado (group.ONE).",
    },
    icon: '/images/checkdomain-icon.png',
    color: 'blue',
    url: 'https://www.checkdomain.de',
    features: {
      de: ['Aufgebaut von 2001 bis 2019', 'Marktführendes organisches Wachstum', 'Akquiriert von group.ONE'],
      en: ['Built from 2001 to 2019', 'Market-leading organic growth', 'Acquired by group.ONE'],
    },
  },
];


const page = content[lang];
---

<BaseLayout
  title={`${page.headline} — ${t(lang, 'site.title')}`}
  description={page.subtitle}
  lang={lang}
>
  <article>
    <h1>{page.headline}</h1>
    <p class="page-subtitle">{page.subtitle}</p>

    <!-- Projects Grid -->
    <section class="projects-section">
      <div class="projects-grid">
        {projects.map(project => (
          <a href={project.url} target="_blank" rel="noopener noreferrer" class:list={['project-card', `project-card--${project.color}`]}>
            <div class="project-card-header">
              <div class="project-icon-group">
                <img src={project.icon} alt={`${project.title} icon`} class="project-icon" width="48" height="48" />
                <div>
                  <h3 class="project-title">{project.title}</h3>
                  <span class:list={['project-badge', `badge--${project.color}`]}>
                    {project.subtitle[lang]}
                  </span>
                </div>
              </div>
              <svg class="project-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </div>

            <p class="project-description">{project.description[lang]}</p>

            <ul class="project-features">
              {(project.features[lang]).map((feature: string) => (
                <li>
                  <span class:list={['feature-dot', `dot--${project.color}`]} />
                  {feature}
                </li>
              ))}
            </ul>
          </a>
        ))}
      </div>
    </section>

  </article>
</BaseLayout>

<style>
  .page-subtitle {
    color: var(--color-text-light);
    font-size: 1.0625rem;
    margin-bottom: var(--space-xl);
  }

  /* Projects Grid */
  .projects-section {
    margin-bottom: var(--space-2xl);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.25rem;
  }

  /* Project Card */
  .project-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
    color: inherit;
    transition: all 0.2s ease;
  }

  .project-card:hover {
    text-decoration: none;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    transform: translateY(-3px);
  }

  .project-card--blue:hover { border-color: rgba(59, 130, 246, 0.3); background: linear-gradient(135deg, rgba(59, 130, 246, 0.06), transparent); }
  .project-card--purple:hover { border-color: rgba(139, 92, 246, 0.3); background: linear-gradient(135deg, rgba(139, 92, 246, 0.06), transparent); }
  .project-card--emerald:hover { border-color: rgba(16, 185, 129, 0.3); background: linear-gradient(135deg, rgba(16, 185, 129, 0.06), transparent); }

  .project-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .project-icon-group {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .project-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    object-fit: cover;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.25rem;
  }

  .project-badge {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.125rem 0.5rem;
    border-radius: 999px;
  }

  .badge--blue { background: rgba(59, 130, 246, 0.1); color: #3b82f6; border: 1px solid rgba(59, 130, 246, 0.2); }
  .badge--purple { background: rgba(139, 92, 246, 0.1); color: #8b5cf6; border: 1px solid rgba(139, 92, 246, 0.2); }
  .badge--emerald { background: rgba(16, 185, 129, 0.1); color: #10b981; border: 1px solid rgba(16, 185, 129, 0.2); }

  .project-arrow {
    color: var(--color-text-muted);
    transition: all 0.2s ease;
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .project-card:hover .project-arrow {
    color: var(--color-accent);
    transform: translateX(3px);
  }

  .project-description {
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .project-features {
    list-style: none;
    padding: 0;
    margin: auto 0 0;
  }

  .project-features li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.375rem;
  }

  .feature-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .dot--blue { background: #3b82f6; }
  .dot--purple { background: #8b5cf6; }
  .dot--emerald { background: #10b981; }

  /* Responsive */
  @media (max-width: 640px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .project-card {
      padding: 1.25rem;
    }
  }
</style>
