const page = content[lang];
---

<BaseLayout
  title={`${page.headline} — ${t(lang, 'site.title')}`}
  description={page.subtitle}
  lang={lang}
>
  <article>
    <h1>{page.headline}</h1>
    <p class="page-subtitle">{page.subtitle}</p>

    <!-- Projects Grid -->
    <section class="projects-section">
      <div class="projects-grid">
        {projects.map(project => (
          <a href={project.url} target="_blank" rel="noopener noreferrer" class:list={['project-card', `project-card--${project.color}`]}>
            <div class="project-card-header">
              <div class="project-icon-group">
                <img src={project.icon} alt={`${project.title} icon`} class="project-icon" width="48" height="48" />
                <div>
                  <h3 class="project-title">{project.title}</h3>
                  <span class:list={['project-badge', `badge--${project.color}`]}>
                    {project.subtitle[lang]}
                  </span>
                </div>
              </div>
              <svg class="project-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </div>

            <p class="project-description">{project.description[lang]}</p>

            <ul class="project-features">
              {(project.features[lang]).map((feature: string) => (
                <li>
                  <span class:list={['feature-dot', `dot--${project.color}`]} />
                  {feature}
                </li>
              ))}
            </ul>
          </a>
        ))}
      </div>
    </section>

    <!-- Track Record Section -->
    <section class="timeline-section">
      <div class="section-header">
        <h2>{page.trackRecordTitle}</h2>
        <p class="section-subtitle">{page.trackRecordSubtitle}</p>
      </div>

      <div class="timeline">
        {timeline.map(item => (
          <div class="timeline-item">
            <div class="timeline-dot-col">
              <div class="timeline-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="16" height="16">
                  <Fragment set:html={item.icon} />
                </svg>
              </div>
              <div class="timeline-line" />
            </div>
            <div class="timeline-content">
              <h3 class="timeline-title">
                <span class="timeline-period">{typeof item.period === 'string' ? item.period : item.period[lang]}</span>
                <span class="timeline-sep"> · </span>
                {item.url ? (
                  <a href={item.url} target="_blank" rel="noopener noreferrer">{item.title}</a>
                ) : (
                  <span>{item.title}</span>
                )}
              </h3>
              <p class="timeline-description">{typeof item.description === 'string' ? item.description : item.description[lang]}</p>
              <span class="timeline-badge">{item.badge}</span>
            </div>
          </div>
        ))}
      </div>
    </section>
  </article>
</BaseLayout>

<style>
  .page-subtitle {
    color: var(--color-text-light);
    font-size: 1.0625rem;
    margin-bottom: var(--space-xl);
  }

  /* Projects Grid */
  .projects-section {
    margin-bottom: var(--space-2xl);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.25rem;
  }

  /* Project Card */
  .project-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
    color: inherit;
    transition: all 0.2s ease;
  }

  .project-card:hover {
    text-decoration: none;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    transform: translateY(-3px);
  }

  .project-card--blue:hover { border-color: rgba(59, 130, 246, 0.3); background: linear-gradient(135deg, rgba(59, 130, 246, 0.06), transparent); }
  .project-card--purple:hover { border-color: rgba(139, 92, 246, 0.3); background: linear-gradient(135deg, rgba(139, 92, 246, 0.06), transparent); }
  .project-card--emerald:hover { border-color: rgba(16, 185, 129, 0.3); background: linear-gradient(135deg, rgba(16, 185, 129, 0.06), transparent); }

  .project-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .project-icon-group {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .project-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    object-fit: cover;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.25rem;
  }

  .project-badge {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.125rem 0.5rem;
    border-radius: 999px;
  }

  .badge--blue { background: rgba(59, 130, 246, 0.1); color: #3b82f6; border: 1px solid rgba(59, 130, 246, 0.2); }
  .badge--purple { background: rgba(139, 92, 246, 0.1); color: #8b5cf6; border: 1px solid rgba(139, 92, 246, 0.2); }
  .badge--emerald { background: rgba(16, 185, 129, 0.1); color: #10b981; border: 1px solid rgba(16, 185, 129, 0.2); }

  .project-arrow {
    color: var(--color-text-muted);
    transition: all 0.2s ease;
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .project-card:hover .project-arrow {
    color: var(--color-accent);
    transform: translateX(3px);
  }

  .project-description {
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .project-features {
    list-style: none;
    padding: 0;
    margin: auto 0 0;
  }

  .project-features li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.375rem;
  }

  .feature-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .dot--blue { background: #3b82f6; }
  .dot--purple { background: #8b5cf6; }
  .dot--emerald { background: #10b981; }

  /* Section Headers */
  .section-header {
    margin-bottom: var(--space-lg);
  }

  .section-header h2 {
    font-size: 1.75rem;
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    color: var(--color-text-light);
    font-size: 1.0625rem;
    margin: 0;
  }

  /* Timeline */
  .timeline-section {
    margin-bottom: var(--space-xl);
  }

  .timeline-item {
    display: flex;
    gap: 0.75rem;
  }

  .timeline-dot-col {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .timeline-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--color-accent);
    flex-shrink: 0;
  }

  .timeline-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background: var(--color-accent-light);
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .timeline-line {
    width: 1px;
    flex: 1;
    background: var(--color-border);
    margin-top: 0.5rem;
  }

  .timeline-item:last-child .timeline-line {
    display: none;
  }

  .timeline-content {
    padding-bottom: 2rem;
  }

  .timeline-title {
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.75;
    color: var(--color-text);
    margin: 0 0 0.5rem;
  }

  .timeline-title a {
    color: var(--color-text);
    transition: color 0.15s ease;
  }

  .timeline-title a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .timeline-period {
    color: var(--color-text-light);
    font-weight: 400;
  }

  .timeline-sep {
    color: var(--color-text-muted);
  }

  .timeline-description {
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 0.75rem;
  }

  .timeline-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgba(37, 99, 235, 0.06);
    color: var(--color-accent);
    border: 1px solid rgba(37, 99, 235, 0.15);
    border-radius: 999px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .project-card {
      padding: 1.25rem;
    }
  }
</style>
