  .about-personal ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .about-personal li {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
