---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { t } from '../../i18n/utils';
import { languages } from '../../i18n/config';
import type { Lang } from '../../i18n/config';

export function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Lang };

const content = {
  de: {
    headline: 'Über mich',
    bio: [
      'Ich bin Johannes Herold, Unternehmer und Gründer aus Lübeck. Seit über 30 Jahren baue ich digitale Unternehmen — vom ersten White-Label-Chat-System 1996 bis hin zu AI-getriebenen Ventures heute.',
      'Mein Fokus liegt auf dem Aufbau von Ökosystemen, die von AI und Daten angetrieben werden. Ich glaube an Technologie, die menschliches Potenzial freisetzt: Systeme, die vereinfachen wie wir arbeiten, uns verbinden und leben — immer mit einem tief menschlichen Design.',
      'Aktuell baue ich mit meiner Holding idearockers an mehreren Ventures gleichzeitig — wynd (hyperlocale Winddaten), flowboost (AI Content Agents) und breathe (Achtsamkeits-App). Zuvor habe ich checkdomain gegründet und bis zum 8-stelligen Exit skaliert.',
    ],
  },
  en: {
    headline: 'About',
    bio: [
      "I'm Johannes Herold, entrepreneur and founder based in Lübeck, Germany. For over 30 years I've been building digital businesses — from the first white-label chat system in 1996 to AI-powered ventures today.",
      "My focus is on building ecosystems powered by AI and data. I believe in technology that unlocks human potential: systems that streamline how we work, connect, and live — while keeping design deeply human.",
      "Currently I'm building multiple ventures through my holding company idearockers — wynd (hyperlocal wind data), flowboost (AI content agents) and breathe (mindfulness app). Previously I founded and scaled checkdomain to an 8-figure exit.",
    ],
  },
};

const page = content[lang];
---

<BaseLayout
  title={`${page.headline} — ${t(lang, 'site.title')}`}
  description={t(lang, 'about.description')}
  lang={lang}
>
  <article class="about">
    <h1>{page.headline}</h1>

    <div class="about-header">
      <img
        src="/images/johannes-herold.jpg"
        alt="Johannes Herold"
        class="about-photo"
        width="140"
        height="140"
      />
      <div class="about-bio">
        {page.bio.map(paragraph => (
          <p>{paragraph}</p>
        ))}
      </div>
    </div>

    <div class="about-stats">
      <div class="stat">
        <span class="stat-number">{t(lang, 'hero.stats.years')}</span>
        <span class="stat-label">{t(lang, 'hero.stats.yearsLabel')}</span>
      </div>
      <div class="stat">
        <span class="stat-number">{t(lang, 'hero.stats.ventures')}</span>
        <span class="stat-label">{t(lang, 'hero.stats.venturesLabel')}</span>
      </div>
      <div class="stat">
        <span class="stat-number">{t(lang, 'hero.stats.exits')}</span>
        <span class="stat-label">{t(lang, 'hero.stats.exitsLabel')}</span>
      </div>
    </div>

  </article>
</BaseLayout>

<style>
  .about-header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }

  .about-photo {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .about-bio p {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--color-text-secondary);
  }

  .about-stats {
    display: flex;
    gap: 2.5rem;
    justify-content: center;
    margin-bottom: var(--space-2xl);
    padding: var(--space-lg);
    background: var(--color-bg-subtle);
    border-radius: 12px;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.125rem;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--color-text-light);
    text-align: center;
    line-height: 1.3;
  }

  @media (max-width: 640px) {
    .about-header {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }
</style>
