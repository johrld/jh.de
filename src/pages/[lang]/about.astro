        {page.personal.map(item => (
          <li>{item}</li>
        ))}
      </ul>
    </div>

    <hr class="section-divider" />

    <section class="timeline-section">
      <h2>{lang === 'de' ? 'Track Record' : 'Track Record'}</h2>
      <div class="timeline">
        {timeline.map(item => (
          <div class="timeline-item">
            <div class="timeline-dot-col">
              <div class="timeline-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="16" height="16">
                  <Fragment set:html={item.icon} />
                </svg>
              </div>
              <div class="timeline-line" />
            </div>
            <div class="timeline-content">
              <h3 class="timeline-title">
                <span class="timeline-period">{typeof item.period === 'string' ? item.period : item.period[lang]}</span>
                <span class="timeline-sep"> ¬∑ </span>
                {item.url ? (
                  <a href={item.url} target="_blank" rel="noopener noreferrer">{item.title}</a>
                ) : (
                  <span>{item.title}</span>
                )}
              </h3>
              <p class="timeline-description">{typeof item.description === 'string' ? item.description : item.description[lang]}</p>
              <span class="timeline-badge">{item.badge}</span>
            </div>
          </div>
        ))}
      </div>
    </section>

  </article>
</BaseLayout>

<style>
  .about-photo {
